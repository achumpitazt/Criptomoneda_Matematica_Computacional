        <TextBox x:Name="txb_Nombre" HorizontalAlignment="Left" Height="23" Margin="214,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438"/>
        <TextBox x:Name="txb_Apellido" HorizontalAlignment="Left" Height="23" Margin="214,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438"/>
        <TextBox x:Name="txb_Email" HorizontalAlignment="Left" Height="23" Margin="214,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438"/>
        <TextBox x:Name="txb_Contraseña" HorizontalAlignment="Left" Height="23" Margin="214,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438"/>
        <TextBox x:Name="txb_ConfirmarContraseña" HorizontalAlignment="Left" Height="23" Margin="214,216,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="438"/>
        <Label Content="Ingrese su Nombre:" HorizontalAlignment="Left" Margin="46,45,0,0" VerticalAlignment="Top"/>
        <Label Content="Ingrese su Apellido:" HorizontalAlignment="Left" Margin="46,87,0,0" VerticalAlignment="Top"/>
        <Label Content="Ingrese su Email:" HorizontalAlignment="Left" Margin="46,127,0,0" VerticalAlignment="Top"/>
        <Label Content="Ingrese una Contraseña:" HorizontalAlignment="Left" Margin="46,171,0,0" VerticalAlignment="Top"/>
        <Label Content="Confirmar contraseña:" HorizontalAlignment="Left" Margin="46,216,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
