        </Grid.Background>
        <Button x:Name="btn_PaginaAnterior" Content="Página Anterior" HorizontalAlignment="Left" Margin="46,314,0,0" VerticalAlignment="Top" Width="152" Height="32" Click="btn_PaginaAnterior_Click"/>
