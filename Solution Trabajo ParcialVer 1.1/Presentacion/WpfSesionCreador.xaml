<Window x:Class="Presentacion.SesionCreador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentacion"
        mc:Ignorable="d"
        Title="SesionCreador" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="#FFBED84B"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_IniciarSesion" Content="Iniciar Sesion" HorizontalAlignment="Left" Margin="545,238,0,0" VerticalAlignment="Top" Width="162" Height="83" Click="btn_IniciarSesion_Click"/>
        <Button x:Name="btn_NuevoUsuarioCreador" Content="Crear cuenta" HorizontalAlignment="Left" Margin="545,100,0,0" VerticalAlignment="Top" Width="162" Height="83" Click="btn_NuevoUsuarioCreador_Click"/>
        <Button x:Name="button" Content="Atras" HorizontalAlignment="Left" Margin="87,169,0,0" VerticalAlignment="Top" Width="162" Height="83" Click="button_Click"/>

    </Grid>
</Window>
